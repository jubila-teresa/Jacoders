        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:text="13" />

