            android:layout_height="70dp"
            android:textSize="20sp"
            android:text="8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:text="23" />

        <Button
            android:id="@+id/b7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:text="10" />

